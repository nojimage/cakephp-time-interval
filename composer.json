{
    "name": "elstc/cakephp-time-interval",
    "license": "MIT",
    "description": "TimeInterval type plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=7.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "cakephp/cakephp": "^4.0.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3",
        "cakephp/cakephp-codesniffer": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "Elastic\\TimeInterval\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elastic\\TimeInterval\\Test\\": "tests",
            "TestApp\\": "tests/test_app/TestApp",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs -ps .",
        "cs-fix": "phpcbf -p ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
